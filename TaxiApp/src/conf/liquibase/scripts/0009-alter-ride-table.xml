	<changeSet id="0009-alter-table-ride" author="Denis">
		<sql endDelimiter=";"><![CDATA[
		
			ALTER TABLE ride ADD dispatcher_id BIGINT NULL;
			
			ALTER TABLE ride ADD CONSTRAINT dispatcher_ride_fk FOREIGN KEY (dispatcher_id) REFERENCES users(id);
			
			ALTER TABLE ride ADD finished BOOL NULL;
		
		]]>
		</sql>
	</changeSet>
	
	<changeSet id="0009-alter-table-ride-add-obs" author="Denis">
		<sql endDelimiter=";"><![CDATA[
		
			ALTER TABLE ride ADD observations TEXT;
		
		]]>
		</sql>
	</changeSet>
	
</databaseChangeLog>