<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean class="ro.taxiApp.docs.config.AppEnvironmentPropertyPlaceholderConfigurer">
		<property name="commonPropertyFilePackagePaths">
			<list>
				<value>/conf/commonParameters.properties</value>
			</list>
		</property>
		<property name="environmentParametersFilePackagePaths">
			<list>
				<value>/conf/appEnvironmentParameters.properties</value>
			</list>
		</property>
	</bean>

</beans>